{
  "name": "visiva-platform-app",
  "version": "1.1.0",
  "private": true,
  "description": "VISIVA static platform build and distribution workspace.",
  "type": "module",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/VisivaStudio/visiva-platform-app.git"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20 <26"
  },
  "scripts": {
    "clean": "rm -rf visiva-platform visiva-platform.zip",
    "dev": "npx serve .",
    "start": "npx serve .",
    "build": "node build-visiva.js",
    "zip": "yarn build",
    "lint": "eslint build-visiva.js assets/js/guardian.js eslint.config.js",
    "format": "prettier --write \"{build-visiva.js,package.json,README.md,eslint.config.js,.prettierrc.json,.github/workflows/ci.yml,assets/js/guardian.js}\"",
    "format:check": "prettier --check \"{build-visiva.js,package.json,README.md,eslint.config.js,.prettierrc.json,.github/workflows/ci.yml,assets/js/guardian.js}\"",
    "check": "yarn lint && yarn format:check && yarn build"
  },
  "dependencies": {
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2"
  }
}
